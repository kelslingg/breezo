{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.py",
      "**/*.pkl",
      "**/*.joblib",
      "**/__pycache__/**",
      "**/*.ipynb",
      "**/uploads/**",
      "**/models/**",
      "**/notebooks/**",
      "**/data/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/loading.html"
      }
    ]
  },
  "functions": {
    "source": "breezo",
    "runtime": "nodejs18"
  }
}
